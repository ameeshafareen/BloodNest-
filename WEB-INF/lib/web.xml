<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Blood Bank Management System</display-name>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <!-- Servlet Mappings -->
    
    <!-- Authentication Servlets -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>bloodbank.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>bloodbank.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <!-- Admin Servlets -->
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>bloodbank.servlet.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminInventoryServlet</servlet-name>
        <servlet-class>bloodbank.servlet.AdminInventoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminInventoryServlet</servlet-name>
        <url-pattern>/admin/inventory</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminRequestsServlet</servlet-name>
        <servlet-class>bloodbank.servlet.AdminRequestsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminRequestsServlet</servlet-name>
        <url-pattern>/admin/requests</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminDonorsServlet</servlet-name>
        <servlet-class>bloodbank.servlet.AdminDonorsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDonorsServlet</servlet-name>
        <url-pattern>/admin/donors</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminRecipientsServlet</servlet-name>
        <servlet-class>bloodbank.servlet.AdminRecipientsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminRecipientsServlet</servlet-name>
        <url-pattern>/admin/recipients</url-pattern>
    </servlet-mapping>
    
    <!-- Donor Servlets -->
    <servlet>
        <servlet-name>DonorRegisterServlet</servlet-name>
        <servlet-class>bloodbank.servlet.DonorRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DonorRegisterServlet</servlet-name>
        <url-pattern>/donor/register</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DonorDashboardServlet</servlet-name>
        <servlet-class>bloodbank.servlet.DonorDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DonorDashboardServlet</servlet-name>
        <url-pattern>/donor/dashboard</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DonorHistoryServlet</servlet-name>
        <servlet-class>bloodbank.servlet.DonorHistoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DonorHistoryServlet</servlet-name>
        <url-pattern>/donor/history</url-pattern>
    </servlet-mapping>
    
    <!-- Recipient Servlets -->
    <servlet>
        <servlet-name>RecipientRegisterServlet</servlet-name>
        <servlet-class>bloodbank.servlet.RecipientRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecipientRegisterServlet</servlet-name>
        <url-pattern>/recipient/register</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RecipientDashboardServlet</servlet-name>
        <servlet-class>bloodbank.servlet.RecipientDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecipientDashboardServlet</servlet-name>
        <url-pattern>/recipient/dashboard</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RecipientRequestServlet</servlet-name>
        <servlet-class>bloodbank.servlet.RecipientRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecipientRequestServlet</servlet-name>
        <url-pattern>/recipient/request</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RecipientStatusServlet</servlet-name>
        <servlet-class>bloodbank.servlet.RecipientStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecipientStatusServlet</servlet-name>
        <url-pattern>/recipient/status</url-pattern>
    </servlet-mapping>
    
</web-app>
